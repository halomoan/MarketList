<core:View xmlns:core="sap.ui.core" 
	xmlns="sap.m"  
	xmlns:uxap="sap.uxap" 
	xmlns:l="sap.ui.layout" 
	xmlns:f="sap.ui.layout.form" controllerName="sap.ui.demo.masterdetail.controller.homeView">
    
   
	<uxap:ObjectPageHeaderContent>
		<uxap:content>
			<l:VerticalLayout  class="sapUiSmallMargin">
			<Image src="images/PPHGLogo.png" height="50%"/>
			</l:VerticalLayout>
			<l:VerticalLayout class="sapUiSmallMargin">
				<Title text="Purchasing Requisition" level="H1" titleStyle="H1"/>
				<Title text="SAP Material Management" level="H4" titleStyle="H4"/>
				<ObjectStatus title="User ID" text="KITCHENCHEF"/>
			</l:VerticalLayout>
		</uxap:content>	
	</uxap:ObjectPageHeaderContent>	
	
    <VBox class="sapUiSmallMargin" busy="{viewModel>/busy}" busyIndicatorDelay="{viewModel>/busyIndicatorDelay}">
    	<f:SimpleForm id="SimpleFormToolbar"
			editable="true"
			layout="ResponsiveGridLayout"
			labelSpanXL="4"
			labelSpanL="3"
			labelSpanM="4"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="4"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:toolbar>
				<Toolbar id="TB1">
					<Title text="{i18n>mktListProfile}" level="H4" titleStyle="H4"/>
				</Toolbar>
			</f:toolbar>
			<f:content>

				<Label text="{i18n>plant}" />
					
				<Select id="plant" change="onPlantChange">
					<core:Item text="{Plant}" key="{PlantID}"/>
				</Select>
				
				<Label text="{i18n>costCenter}" />
					
				<Select id="costcenter" change="onCostCenterChange">
				</Select>
				
				<Label text="{i18n>unloadingPoint}" />
					
				<Select id="unloadingpoint">
				</Select>
				
				
				<Button text="OK" press="gotoForm"/>
			</f:content>
			</f:SimpleForm>
    </VBox>	

</core:View>
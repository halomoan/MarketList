<core:View
	xmlns:core="sap.ui.core"
	
	xmlns="sap.m"
	xmlns:unified="sap.ui.unified"
	xmlns:l="sap.ui.layout"
	
	controllerName="sap.ui.demo.masterdetail.controller.planCalendar" xmlns:html="http://www.w3.org/1999/xhtml">
	
	<Page showHeader="false">
		<l:Splitter id="mainSplitter" height="100%" width="100%" orientation="Vertical">

		<PlanningCalendar
			id="PC1"
			startDate="{path: 'calModel>/Date'}"
			rows="{path: 'calModel>/scheduleheader'}"
			viewKey="Week"
			appointmentsVisualization="Filled"
			appointmentSelect="handleAppointmentSelect"
			showEmptyIntervalHeaders="false"
			stickyHeader="true"
			startDateChange = "onStartDateChange"
			showWeekNumbers="true"
			busy="{detailView>/calbusy}"
			busyIndicatorDelay="{detailView>/calbusyindicator}">
			<toolbarContent>
				<Button icon="sap-icon://nav-back" press="onNavBack"></Button>
				<Title text="{i18n>pr} {i18n>byUnloading}" titleStyle="H4"/>
				<ToolbarSpacer></ToolbarSpacer>
				<Button text="{i18n>showDetail}" press="onShowDetail"></Button>
			</toolbarContent>
			<rows>
				<PlanningCalendarRow            
					icon="{calModel>Pic}"
					title="{calModel>Name}"
					text="{calModel>Role}"
					appointments="{path : 'calModel>NavHeaderToItem', templateShareable: 'true'}"
					>
					<customData>
						<core:CustomData key="emp-name" value="{calModel>name}" writeToDom="true"/>
					</customData>
					<appointments>
						<unified:CalendarAppointment
							startDate="{calModel>StartDate}"
							endDate="{calModel>EndDate}"
							icon="{calModel>Pic}"
							title="PRID: {calModel>Title}"
							text="{calModel>Info}"
							type="{calModel>Type}"
							tentative="{calModel>Tentative}">
						</unified:CalendarAppointment>
					</appointments>
				</PlanningCalendarRow>
			</rows>
				<layoutData><l:SplitterLayoutData id="topLayout" size="100%" /></layoutData>
		</PlanningCalendar>
		
		<VBox class="sapUiNoMargin">
			<Table id="idProductsTable"
		inset="false"
		items="{
			path: '/ProductCollection',
			sorter: {
				path: 'Name'
			}
		}">
		<headerToolbar>
			<Toolbar>
				<content>
					<Title text="{i18n>products}" level="H2"/>
					<ToolbarSpacer />
					<ToggleButton id="stickyColHdr"
						text="Sticky Column Headers"
						press="onToggleStickyColHdr" />
				</content>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column
			>
				<Text text="{i18n>product}" />
			</Column>
			<Column
				width="12em"
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="{i18n>priceUnit}" />
			</Column>
			<Column
				width="12em"
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="End">
				<Text text="{i18n>unitPrice}" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true"
				hAlign="End">
				<Text text="{i18n>orderQty}" />
			</Column>
			<Column
				hAlign="End">
				<Text text="{i18n>estimated} {i18n>price}" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<ObjectIdentifier
						title="{Name}"
						text="{ProductId}"/>
					<Text
						text="{SupplierName}" />
					<Text
						text="{Width} x {Depth} x {Height} {DimUnit}" />
					<ObjectNumber
						number="{WeightMeasure}"
						unit="{WeightUnit}"
						state="{
							parts: [
								{path: 'WeightMeasure'},
								{path: 'WeightUnit'}
							],
							formatter: 'sap.m.sample.Table.Formatter.weightState'
						}" />
					<ObjectNumber
							number="{
								parts:[{path:'Price'},{path:'CurrencyCode'}],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {showMeasure: false}
							}"
							unit="{CurrencyCode}" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
			<layoutData><l:SplitterLayoutData id="bottomLayout" size="100%"  /></layoutData>
		</VBox>
		</l:Splitter>	
	</Page>
	
</core:View>
<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<ResponsivePopover
		title="{i18n>information}"
		class="sapUiPopupWithPadding"
		placement="Bottom" >
		<beginButton>
			<Button text="{i18n>close}" press="closeInfoDialog" />
		</beginButton>
		<content>
			<Label text="Purch. Requisition No: {= ${detailView>/PurReqID} ? ${detailView>/PurReqID}: 'None'}"></Label>
			
			<Button id="generatePO"
						class="sapUiSmallMarginBottom"
						text="Generate PO"
						width="100%"
						press="generatePO" />
		</content>
	</ResponsivePopover>
</core:FragmentDefinition>